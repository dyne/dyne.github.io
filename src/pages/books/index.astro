---
import Layout from '~/layouts/Layout.astro';
import books from '../../content/books/books.json';
---

<Layout>
	<h1>Books</h1>
	<h5>People keep mention us in thei books, here you'll find a small essay of those</h5>
	<br />
	<div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
		{
			books.map((b) => (
				<div class="group relative">
					<div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md lg:aspect-none group-hover:opacity-75 lg:h-80">
						<a href={b.url}>
							<img src={b.image} alt={b.title} class="h-full w-full object-cover object-center lg:h-full lg:w-full" />
						</a>
					</div>
					<div>
						<h3 class="text-sm text-gray-700">
							<a href={b.url}>
								{b.title}
								<span class="text-xs text-gray-500">({b.year})</span>
							</a>
						</h3>
						<p class="mt-1 text-sm font-medium">{b.author}</p>
					</div>
				</div>
			))
		}
	</div>
</Layout>

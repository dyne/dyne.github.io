---
import { AstroSeo } from '@astrolib/seo';
import { SITE } from '~/config.mjs';

const {
	title = SITE.name,
	description = SITE.description,
	canonical = SITE.origin,
	noindex = false,
	nofollow = false,
	ogType = 'website',
	cover = 'https://dyne.org/social/facebook.jpg',
} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="fediverse:creator" content="@dyne@toot.community" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="google-site-verification" content="rDWLpshyBbtXZr-9SYj1GMUoH-QTHQTc1i6RrBnSE-Q" />

<AstroSeo
	title={title}
	description={description}
	canonical={canonical}
	noindex={noindex}
	nofollow={nofollow}
	facebook={{
		appId: '140650172370',
	}}
	openGraph={{
		url: canonical,
		title: title,
		description: description,
		type: ogType,
		images: [{ url: cover, alt: title }],
		site_name: 'Dyne.org',
	}}
	twitter={{
		handle: '@DyneOrg',
		site: '@DyneOrg',
		cardType: 'summary_large_image',
	}}
/>

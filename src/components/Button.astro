---
const { href, text, inverted = false, cls = '', id = '', as: Tag = 'a', type = 'button' } = Astro.props;

const styles = {
    base: 'cursor-pointer border-2 py-2 px-4 rounded-full w-fit text-2xl whitespace-nowrap',
    normal: 'text-white bg-accent border-accent hover:bg-saccent hover:border-saccent',
    inverted: 'text-saccent bg-transparent border-accent hover:bg-saccent hover:text-white'
};

const buttonClasses = [
    styles.base,
    inverted ? styles.inverted : styles.normal,
    cls
];
---

<Tag
    id={id}
    href={Tag === 'a' ? href : undefined}
    type={Tag === 'button' ? type : undefined}
    class:list={buttonClasses}
>
    {text}
</Tag>
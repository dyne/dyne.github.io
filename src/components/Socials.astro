---
import SocialIcon from '~/components/SocialIcon.astro';
import socials from '../content/social/index.json';

interface Props {
	size?: number;
	cls?: string;
}

const { size = 24, cls = 'fill-black' } = Astro.props;

const cols = socials.length;
const midIndex = Math.ceil(socials.length / 2);
---

<div class="grid gap-6">
	{
		socials.map((social, index) => (
			<div class={index == midIndex ? 'col-start-2' : ''}>
				<SocialIcon name={social.name} href={social.href} cls={cls} size={size} />
			</div>
		))
	}
</div>

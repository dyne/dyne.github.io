---
import * as copy from '~/content/awards/index.md';
import Button from '~/components/Button.astro';
import Swiper from '~/components/Swiper.astro';
const { description, CTA, href } = copy.frontmatter;
---

<div class="grid grid-cols-3 place-items-center space-y-8 p-20">
	<div
		class="col-span-2 flex flex-col text-center items-center md:text-left md:pr-24 md:items-start space-y-12 md:space-y-8 tracking-tight"
	>
		<p class="max-w-2 text-2xl">{description}</p>
		<div class="text-4xl md:text-5xl lg:text-6xl" set:html={copy.compiledContent()}></div>
		<Button href={href} text={CTA} class="text-right" />
	</div>
	<div class="bg-[url('/images/illustrations/awards.svg')] bg-contain bg-no-repeat h-full w-full">
	</div>
</div>
